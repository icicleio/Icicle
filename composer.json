{
    "name": "icicleio/icicle",
    "description": "Icicle is a PHP library for writing asynchronous code using synchronous coding techniques.",
    "keywords": [
        "asynchronous",
        "async",
        "coroutine",
        "generator",
        "interruptible",
        "promise",
        "socket",
        "stream",
        "network",
        "server",
        "multitasking",
        "event"
    ],
    "homepage": "http://icicle.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@icicle.io"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6"
    },
    "suggest": {
        "ext-openssl": "Enables using SSL/TLS on stream sockets.",
        "ext-pcntl": "Enables custom signal handling.",
        "ext-event": "Provides an event loop with better performance."
    },
    "autoload": {
        "psr-4": {
            "Icicle\\": "src"
        },
        "files": [
            "src/Coroutine/functions.php",
            "src/Loop/functions.php",
            "src/Promise/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Icicle\\Tests\\": "tests"
        }
    }
}
